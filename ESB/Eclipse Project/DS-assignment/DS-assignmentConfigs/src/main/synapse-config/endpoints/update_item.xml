<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="update_item" xmlns="http://ws.apache.org/ns/synapse">
    <http method="put" uri-template="http://localhost:9000/item/update/{uri.var.itemID}">
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1.0</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>0</retriesBeforeSuspension>
        </markForSuspension>
    </http>
</endpoint>
